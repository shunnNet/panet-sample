doctype html
html(lang='zh-Hant-TW')
    head
        link(rel="icon" href="data:image/ico;base64,aWNv")
        title 表藝人 - #{title}

        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(href='https://fonts.googleapis.com/css?family=Noto+Sans+TC:300&display=swap' rel='stylesheet')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
        link(href='/static/stylesheets/all.min.css' rel='stylesheet')

        block insert_script_head
        block page_head

    body
        
        #js-overlay.overlay.z-second(onclick="closeAllMenus()")
        #js-top-box(style="display:flex;flex-direction:column;flex:1")
            nav.mainNav.z-top
                #js-scrollbarPlaceholder-nav.z-second
                #js-menu-query.z-top.menu__query.raised.d-block-screen.w-full
                    form.block(method='get', action='/query')
                        .block__body
                            .form__flexLine
                                .form__flexLine__inputBox.mg-b-10-pad
                                    select.form__select(name='field')
                                        option(value='user') 找人才
                                        option(value='idea') 找點子
                                        option(value='event') 找活動
                                        option(value='work') 找工作
                                        option(value='media') 找影音
                                    .form__flexLine__inputBox__activeBorder
                                .form__flexLine__inputBox.flex-1.pos-relative.mg-l-10.mg-l-0-pad.mg-b-10-pad
                                    input#js-auto-focus.form__input.flex-1(name='qs', type='text', placeholder='輸入要尋找的關鍵字')
                                    .form__flexLine__inputBox__activeBorder
                                button.form__flexLine__button--lightup.mg-l-10.mg-l-0-pad(type='submit')
                                    i.material-icons search    
                .container-lg.pure-g
                    .pure-u-1-5.pure-u-md-1.text-center
                        .nav__iconBox.float-l.d-none.d-block-pad.hover-lightup(onclick='toggleMenu()')
                            i.material-icons list
                        .nav__iconBox.float-r.d-none.d-block-pad.hover-lightup(onclick='toggleNavSearch()')
                            i.material-icons search
                        a.nav__logo(href='/index')
                            img.img--fitHeight(src='/static/images/表藝人-01.svg', alt='logo')
                    .pure-u-4-5.pd-0-pad
                        
                        #js-side-menu.menu.menu--horizontal.menu--horizontal__mobile.menu__fixLeft__md
                            ul.menu__listRight.color-sub
                                if session
                                    if session.login

                                        li.menu__item.menu__item--hasChildren
                                            p.menu__text.color-sub
                                                img.menu__img.menu__img--circle(src=session.account.user.cover_image, alt='')
                                                span.mg-l-5.d-none-pad= session.account.user.name
                                            ul.menu__children.menu__children--right.bg-contrast
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/user/'+session.account.user._id) 個人檔案
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/user/edit/my') 編輯
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/account/logout') 登出
                                        li.menu__item.menu__item--hasChildren
                                            p.menu__text.color-sub 建立
                                            ul.menu__children.menu__children--right.bg-contrast
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/idea/create/new') 想法
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/event/create/new') 活動
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/media/create/new') 作品
                                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                                    a.menu__link.color-sub(href='/work/create/new') 工作
                                    else
                                        li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                            a.menu__link.color-sub(href='/account/registry') 註冊
                                        li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                            a.menu__link.color-sub(href='/account/login') 登入
                                else
                                    li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                        a.menu__link.color-sub(href='/account/registry') 註冊
                                    li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                        a.menu__link.color-sub(href='/account/login') 登入
                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                    a.menu__link.color-sub(href='/index') 首頁
                                li.menu__item.spreadBorderBottom.spreadBorder--coarse
                                    a.menu__link.color-sub(href='/catagories') 全部類別
                            ul.menu__flexBox.reset-ul.color-sub.d-none-screen
                                form(method='get', action='/query', style="flex:1 0 0")
                                    .form__flexLine.pd-0
                                        .form__flexLine__inputBox.mg-b-10-pad
                                            select.form__select(name='field')
                                                option(value='user') 找人才
                                                option(value='idea') 找點子
                                                option(value='event') 找活動
                                                option(value='work') 找工作
                                                option(value='media') 找影音
                                            .form__flexLine__inputBox__activeBorder
                                        .form__flexLine__inputBox.flex-1.pos-relative.mg-l-10.mg-l-0-pad.mg-b-10-pad
                                            input.form__input.flex-1(name='qs', type='text', placeholder='輸入要尋找的關鍵字')
                                            .form__flexLine__inputBox__activeBorder
                                        button.form__flexLine__button--sub.mg-l-10.mg-l-0-pad(type='submit', style="flex:0 1 0px",tab-index=3)
                                            i.material-icons search
                                        
                            .nav__iconBox.d-none.d-block-screen.d-none-pad.float-r.hover-lightup(onclick='toggleNavSearch()')
                                i.material-icons search

            block content

            footer.footLayout
                .container-sm
                    .pure-g
                        .pure-u-6-24.pure-u-md-1-2
                            a.logoBox.a__block.text-center(href="https://pareviews.ncafroc.org.tw/", target="_blank", title="表演藝術評論台")
                                img.img--fluid(src='https://pareviews.ncafroc.org.tw/wp-content/themes/pareviews-2019/images/logo.png', alt='表演藝術評論台')
                        .pure-u-6-24.pure-u-md-1-2
                            a.logoBox.a__block.text-center(href="https://mjkc.tw/?paged=2", target="_blank", title='每周看戲俱樂部')
                                img.img--fluid(src='https://mjkc.tw/wp-content/uploads/2015/01/mjkclogo21.jpg', alt='每周看戲俱樂部')
                        .pure-u-8-24.pure-u-md-1-2
                            a.logoBox.a__block.text-center(href="https://www.artsticket.com.tw/CKSCC2005/Home/Home00/index.aspx", target="_blank", title='兩廳院售票網')
                                img.img--fluid(src='https://www.artsticket.com.tw/ckscc2005/images//img/logo.jpg', alt='兩廳院售票網')
                        .pure-u-4-24.pure-u-md-1-2
                            a.logoBox.a__block.text-center(href="https://laijiatsai.com/", target="_blank", title='菜齊阿')
                                img.logoBox__logo.img--fluid(src='data:image/png;base64,', alt='菜齊阿')
                .container-full
                    .container-md
                        .pure-g.lh-1-5
                            .pure-u-6-24.pure-u-md-1
                                a.a__block(href="/index",title="表藝人")
                                    picture
                                        source(srcset= "/static/images/表藝人-01.svg",type="image/svg+xml")
                                        picture
                                            source(srcset= "/static/images/表藝人-01.svg",type="image/svg+xml")
                                            img.logoBanner__logo(src='/static/images/表藝人-01.png', alt='表演藝術人力銀行')
                                        
                                    
                            .pure-u-8-24.pure-u-md-1.bd-l-sub
                                .block
                                    p
                                        a.reset-a.hover-lightup.pd-h-10(href="#", style="letter-spacing:0.1em") 網站公告
                                        a.reset-a.hover-lightup.pd-h-10.bd-l-sub(href="#", style="letter-spacing:0.1em") 隱私權條款
                                    ul.pd-h-10.share-buttons
                                        li
                                            a.a__block(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fpanet.herokuapp.com%2Findex&quote=%E8%A1%A8%E8%97%9D%E4%BA%BA', title='Share on Facebook', target='_blank')
                                                img(alt='Share on Facebook', src='/static/images/Facebook.svg')
                                        li
                                            a.a__block(href='https://twitter.com/intent/tweet?source=https%3A%2F%2Fpanet.herokuapp.com%2Findex&text=%E8%A1%A8%E8%97%9D%E4%BA%BA:%20https%3A%2F%2Fpanet.herokuapp.com%2Findex', target='_blank', title='Tweet')
                                                img(alt='Tweet', src='/static/images/Twitter.svg')
                                        li
                                            a.a__block(href='mailto:wendell20904102@gmail.com?subject=%E8%A1%A8%E8%97%9D%E4%BA%BA&body=Demo%20website:%20https%3A%2F%2Fpanet.herokuapp.com%2Findex', target='_blank', title='Send email')
                                                img(alt='Send email', src='/static/images/Email.svg')
                            .pure-u-10-24.pure-u-md-1
                                .block
                                    .fw-bolder
                                        p.pd-h-10.block__body__subDesc(style="letter-spacing:0.3em") 本網站僅作於學習用途
                                        
            
        #js-scrollbarPlaceholder
        

        script(src='/static/javascripts/global.js')
        block foot_script
